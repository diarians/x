local player = game.Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

local startScreen = playerGui:WaitForChild("StartScreen", 10)
if startScreen then
    local mainHolder = startScreen:WaitForChild("MainHolder", 10)
    if mainHolder then
        local confirmPrompt = mainHolder:WaitForChild("ConfirmPrompt", 10)
        if confirmPrompt then
            local secondConfirmPrompt = confirmPrompt:FindFirstChild("ConfirmPrompt", true)
            if secondConfirmPrompt then
                local function waitForRender(gui)
                    if not gui then return end
                    while gui.AbsoluteSize.X == 0 or gui.AbsoluteSize.Y == 0 do
                        gui:GetPropertyChangedSignal("AbsoluteSize"):Wait()
                    end
                    while gui.AbsolutePosition.X == 0 and gui.AbsolutePosition.Y == 0 do
                        gui:GetPropertyChangedSignal("AbsolutePosition"):Wait()
                    end
                end

                for _, child in ipairs(secondConfirmPrompt:GetChildren()) do
                    if child.Name == "Yes" then
                        local spawnButton = mainHolder:FindFirstChild("Spawn", true)

                        waitForRender(secondConfirmPrompt)
                        waitForRender(child)

                        if spawnButton then
                            waitForRender(spawnButton)

                            local relX = spawnButton.AbsolutePosition.X - secondConfirmPrompt.AbsolutePosition.X
                            local relY = spawnButton.AbsolutePosition.Y - secondConfirmPrompt.AbsolutePosition.Y

                            local offsetX = 22 * (1600 / 1366)
                            local offsetY = 0

                            child.AnchorPoint = Vector2.new(0, 0)
                            child.Position = UDim2.new(0, relX + offsetX, 0, relY + offsetY)
                        end
                    end
                end
            end
        end
    end
end
